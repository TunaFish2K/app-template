{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": ["bun-types"],
        "strict": true,
        "composite": true,
        "rootDir": "../src/main",
        "paths": {
            "@main/*": ["../src/main/*"]
